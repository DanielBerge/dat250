<?xml version="1.0" encoding="UTF-8" ?>
<persistence xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://java.sun.com/xml/ns/persistence http://java.sun.com/xml/ns/persistence/persistence_2_0.xsd"
    version="2.0" xmlns="http://java.sun.com/xml/ns/persistence">
    <persistence-unit name="creditcard" transaction-type="RESOURCE_LOCAL">
        <class>no.hvl.dat250.jpa.creditcard.model.Address</class>
        <class>no.hvl.dat250.jpa.creditcard.model.Bank</class>
        <class>no.hvl.dat250.jpa.creditcard.model.CreditCard</class>
        <class>no.hvl.dat250.jpa.creditcard.model.Person</class>
        <class>no.hvl.dat250.jpa.creditcard.model.Pincode</class>
 <properties>
  <property name="javax.persistence.jdbc.driver" value="org.apache.derby.jdbc.EmbeddedDriver" />
  <property name="javax.persistence.jdbc.url"
    value="jdbc:derby:./creditcardDb;create=true" />
  <property name="javax.persistence.jdbc.user" value="" />
  <property name="javax.persistence.jdbc.password" value="" />

  <!-- EclipseLink should create the database schema automatically -->
  <property name="eclipselink.ddl-generation" value="create-tables" />
  <property name="eclipselink.ddl-generation.output-mode" value="database" />
 </properties>

    </persistence-unit>
</persistence>
